{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build",
    "sourceMap": false,
    "declaration": false,
    "target": "ES2015",
		"module": "commonjs",
    "moduleResolution": "node",
		"strict": true,
    "removeComments": false,
    "inlineSources": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "noUnusedParameters": false,
		"noImplicitReturns": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@san/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2018"]
	},
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/customTypings"
  ]
}
